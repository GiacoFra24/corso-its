generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id      String  @id @default(uuid())
  name    String  @db.VarChar(20)
  history String?
  age     Int?
  health  Int?
  stamina Int?
  mana    Int?
}

model Class{
  id      String @id @default(uuid())

  skills ClassSkillMod[]
}

model Skill{
  id      String @id @default(uuid())

  classes ClassSkillMod[]
}

model ClassSkillMod {
  skill   Skill  @relation(fields: [idSkill], references: [id])
  idSkill String 
  class   Class  @relation(fields: [idClass], references: [id])
  idClass String 
  value   Int
  
  @@id([idSkill, idClass])
}